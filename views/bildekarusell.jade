#bildekarusell.carousel.slide
  ol.carousel-indicators
    li.active(data-target='#bildekarusell', data-slide-to='0')
    li(data-target='#bildekarusell', data-slide-to='1')
    li(data-target='#bildekarusell', data-slide-to='2')

  .carousel-inner
    each bilde, i in bilder
      if i === 0   
        .active.item
          img(src="#{bilde.url}")
          .carousel-caption
            h4 #{bilde.overskrift}
            p #{bilde.tekst}
      else
        .item  
          img(src="#{bilde.url}")
          .carousel-caption
            h4 #{bilde.overskrift}
            p #{bilde.tekst}

  a.carousel-control.left(href='#bildekarusell', data-slide='prev') &lsaquo;
  a.carousel-control.right(href='#bildekarusell', data-slide='next') &rsaquo;