!!! 5
html(lang='en')
head
    meta(charset='utf-8')
    title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Bryllupsside for André og Sarah som gifter seg den 24.08.2013')
    meta(name='author', content='André Kvist Aronsen')
    link(href='/css/bootstrap.min.css', rel='stylesheet')  
    link(href='/css/bootstrap-responsive.min.css', rel='stylesheet')
    link(href='/css/bootstrap-modal.css', rel='stylesheet')
    link(href='/css/bryllup.css', rel='stylesheet')
    //
       HTML5 shim, for IE6-8 support of HTML5 elements 
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
    //
       Fav and touch icons 
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/ico/apple-touch-icon-144-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/ico/apple-touch-icon-114-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/ico/apple-touch-icon-72-precomposed.png')
    link(rel='apple-touch-icon-precomposed', href='/ico/apple-touch-icon-57-precomposed.png')
    link(rel='shortcut icon', href='/ico/favicon.png')

  body(data-spy="scroll", data-target=".navbar")
    .navbar.navbar-inverse.navbar-fluid-top
      .navbar-inner
        .container-fluid
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') Bryllup 24. august 2013
          .nav-collapse.collapse
            ul.nav
              li.active
                a(href='#toppen') Hjem
              li
                a(href='#svar') Svar   
              li
                a(href='#gjesteliste') Gjesteliste  
              li
                a(href='#bilder') Bilder
              li
                a#loggut(href='/') Logg ut
    .container-fluid
      #toppen.seksjon
        h2 Velkommen til bryllup, #{invitasjon.tiltale}!

        p Introtekst

      hr#svar.soften  

      .seksjon
        h2 Svar
        each gjest in invitasjon.gjester
          .row-fluid
            .span11
              .span4 
                h5.gjest #{gjest.fulltNavn}
              .span7.btn-group(data-toggle='buttons-radio')
                if gjest.kommer === 'Ja'
                  button.btn.btn-primary.active(type='button') Kommer
                  button.btn.btn-primary(type='button') Kommer ikke 
                else if gjest.kommer === 'Nei'
                  button.btn.btn-primary(type='button') Kommer
                  button.btn.btn-primary.active(type='button') Kommer ikke  
                else
                  button.btn.btn-primary(type='button') Kommer
                  button.btn.btn-primary(type='button') Kommer ikke
                      
      hr#gjesteliste.soften

      .seksjon
        h2 Gjester

        p Det er invitert 100 gjester, blabla.

        a#vis-gjesteliste(class="btn btn-success btn-large",
                          role="button", 
                          data-toggle="modal", 
                          data-target="#gjesteliste-modal",
                          href="/gjesteliste") Vis gjesteliste

        #gjesteliste-modal.modal.hide.fade(role="dialog", tabindex="-1")

      hr#bilder.soften

      .seksjon
        h2 Bilder

        #bildekarusell.carousel.slide
          ol.carousel-indicators
            li.active(data-target='#bildekarusell', data-slide-to='0')
            li(data-target='#bildekarusell', data-slide-to='1')
            li(data-target='#bildekarusell', data-slide-to='2')
        
          .carousel-inner
            .active.item
              img(src="/img/bilde1.jpg")
              .carousel-caption
                h4 Kult bilde
                p Bilde av blabla
            .item
              img(src="/img/bilde2.jpg")
              .carousel-caption
                h4 Kult bilde
                p Bilde av blabla
            .item
              img(src="/img/bilde3.jpg")
              .carousel-caption
                h4 Kult bilde
                p Bilde av blabla

          a.carousel-control.left(href='#bildekarusell', data-slide='prev') &lsaquo;
          a.carousel-control.right(href='#bildekarusell', data-slide='next') &rsaquo;

    footer.footer
      p Laget av André Kvist Aronsen, &copy; 2013

    script(src='/js/jquery.js')
    script(src='/js/underscore.js')
    script(src='/js/modernizr.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/bryllup.js')
    //script(src='/js/bryllup.min.js')
    script
      $(document).ready(function() {
        BRYLLUP.lagreInvitasjon(!{JSON.stringify(invitasjon)});
        BRYLLUP.startHovedside();
      });
